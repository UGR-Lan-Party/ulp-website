---
interface Props {
  position: string;
  awards: string[];
}
const { position, awards } = Astro.props as Props;

const positionStyles =
  position === 'first'
    ? 'bg-[#FFC00220] border-2 border-[#FFC00299] shadow-[10px_10px_30px_rgba(255,192,2,0.4)]'
    : position === 'second'
      ? 'bg-[#9a9ba020] border-2 border-[#9a9ba099] xl:top-28 xl:transform  xl:translate-x-[-370px] shadow-[10px_10px_30px_rgba(154,155,160,0.4)]'
      : position === 'third'
        ? 'bg-[#BB552220] border-2 border-[#BB552299] xl:top-48 xl:transform  xl:translate-x-[370px] shadow-[10px_10px_30px_rgba(187,85,34,0.4)]'
        : position === 'mvp'
          ? 'bg-[#F9FAFB20] border-2 border-[#D7D7FF99] shadow-2xl'
          : '';

const badgeImage =
  position === 'first'
    ? '/assets/competitions/medals/ulp-gold-badge.png'
    : position === 'second'
      ? '/assets/competitions/medals/ulp-silver-badge.png'
      : position === 'third'
        ? '/assets/competitions/medals/ulp-bronze-badge.png'
        : position === 'mvp'
          ? '/assets/competitions/medals/ulp-mvp-badge.png'
          : '';

const positionSpanish =
  position === 'first'
    ? 'Campeón'
    : position === 'second'
      ? '2º puesto'
      : position === 'third'
        ? '3º puesto'
        : position === 'mvp'
          ? 'MVP'
          : '';
---

<div
  class={`w-[350px] h-[420px] flex flex-col items-center xl:absolute m-4 rounded-2xl dark:text-white  ${positionStyles}`}
>
  <img class="w-52 items-center object-contain -mt-28" src={badgeImage} />

  <div class="flex h-1/2 flex-col items-center mt-2 justify-start gap-4">
    <p
      class="text-2xl items-center justify-center mb-2 font-semibold text-justify"
    >
      {positionSpanish}
    </p>

    <img
      class="w-52 items-center object-contain"
      src={'/assets/competitions/medals/lucky-box-ulp.gif'}
    />
    <!-- Cuando sepamos los premios definitivos los pondremos aquí. -->
