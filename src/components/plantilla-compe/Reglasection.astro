---
const {link} = Astro.props;
---

<!-- ====== Reglas Section Start -->
<section class="relative z-10 overflow-hidden py-20 lg:py-[115px]">
  <div class="container mx-auto">
    <div class="relative overflow-hidden">
      <div class="w-full px-4">
        <div class="mx-auto max-w-[570px] text-center">
          <h2 class="mb-10 text-3xl font-bold md:leading-[1.44] text-dark dark:text-white md:text-[38px]">
            Reglas
          </h2>
        </div>
      </div>
      <div class="mx-auto text-center pb-5 pt-10">
        <a href={link} class="w-1/3 inline-flex items-center justify-center py-3 text-base font-medium text-center text-white border border-primary rounded-md px-7 bg-primary shadow-lg hover:bg-blue-dark hover:border-blue-dark">
          Descargar reglas
        </a>
      </div>
    </div>
  </div>
</section>
<!-- ====== Reglas Section End -->