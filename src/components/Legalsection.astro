---
<section class={`relative z-10 overflow-hidden py-20 lg:py-[115px]`}>
  <div class="container mx-auto">
    <div class="max-w-5xl mx-auto space-y-4">
      {sections.length > 0 ? (
        sections.map((section, index) => {
          const iconSVG = iconMap[section.title] ?? "";
          return (
          <details 
            class="group border border-gray-300 dark:border-gray-200 dark:bg-gray-200 rounded-lg p-4 transition-all duration-300 ease-in-out overflow-hidden shadow-sm hover:shadow-lg dark:hover:shadow-blue-400/50 hover:border-gray-400 dark:hover:border-blue-400"
          >
            <summary 
              class="cursor-pointer font-semibold text-lg text-dark dark:text-primary  flex justify-between items-center select-none"
            >
              <div class="flex items-center gap-4">
                <span set:html={iconSVG} />
                <span>{section.title}</span> 
              </div>
              <span class="transition-transform duration-300 ease-in-out group-open:rotate-180">
                ▼
              </span>
            </summary>
            <div class="mt-3 text-gray-700 dark:text-secondary transition-opacity duration-300 ease-in-out group-open:opacity-100 opacity-0">
              {section.content}
            </div>
          </details>
          );
        })
      ) : (
        <p class="text-center text-gray-500">No se encontraron secciones.</p>
      )}
    </div>
  </div>
</section>