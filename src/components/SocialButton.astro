---
import type { SponsorLink } from '../data/sponsors.ts';
import XIcon from '../../public/assets/icons/XIcon.astro';
import FacebookIcon from '../../public/assets/icons/FacebookIcon.astro';
import InstagramIcon from '../../public/assets/icons/InstagramIcon.astro';
import WebIcon from '../../public/assets/icons/WebIcon.astro';
import TikTokIcon from '../../public/assets/icons/TikTokIcon.astro';
import LinkedInIcon from '../../public/assets/icons/LinkedInIcon.astro';
import YouTubeIcon from '../../public/assets/icons/YouTubeIcon.astro';

interface Props {
  sponsorLink: SponsorLink;
}
const { sponsorLink } = Astro.props as Props;

// ðŸŽ¨ Colores oficiales por red
const hoverColors: Record<string, string> = {
  X: "hover:text-black dark:hover:text-white",
  Instagram: "hover:text-pink-500 hover:dark:text-pink-400",
  Facebook: "hover:text-blue-600 hover:dark:text-blue-400",
  LinkedIn: "hover:text-blue-700 hover:dark:text-blue-500",
  TikTok: "hover:text-cyan-400 hover:dark:text-cyan-300",
  YouTube: "hover:text-red-600 hover:dark:text-red-500",
  Web: "hover:text-primary hover:dark:text-primary",
};

const hoverClass = hoverColors[sponsorLink.rrss] ?? "hover:text-primary";
---

<a
  href={sponsorLink.link}
  target="_blank"
  rel="noopener noreferrer"
  class={`text-gray-300 dark:text-gray-600 ${hoverClass}
          transition-all duration-300 ease-in-out
          hover:scale-110`}
>
  {sponsorLink.rrss === 'X' && <XIcon />}
  {sponsorLink.rrss === 'Facebook' && <FacebookIcon />}
  {sponsorLink.rrss === 'Web' && <WebIcon />}
  {sponsorLink.rrss === 'Instagram' && <InstagramIcon />}
  {sponsorLink.rrss === 'LinkedIn' && <LinkedInIcon />}
  {sponsorLink.rrss === 'TikTok' && <TikTokIcon />}
  {sponsorLink.rrss === 'YouTube' && <YouTubeIcon />}
</a>