---
import CarouselSection from './CarouselSection.astro';

interface Props {
  title: string;
  date: string;
  description: string;
  albumId: string;
  userId: string;
  unlimitedHeight?: boolean;
}

const { title, date, description, albumId, userId, unlimitedHeight = false } = Astro.props;
const instanceId = `right-carousel-${albumId}`;
const darkStyles = "dark:bg-dark dark:text-white";
---

<section id={instanceId}>
  <div class="container pt-20 pb-12 lg:pt-[120px]">
    <div class="text-center">
      <h2 class="mb-3 text-3xl font-bold leading-tight text-dark dark:text-white sm:text-[40px] sm:leading-[1.2]">
        {title}
      </h2>
      <span class="block text-xl text-body-color dark:text-dark-6">{date}</span>
    </div>
  </div>

  <div class="container pb-8 lg:pb-[70px]">
    <div class="wow fadeInUp" data-wow-delay=".2s">
      <div class="flex flex-wrap items-center">
        <div class="w-full px-4 lg:w-2/5 xl:w-1/3 order-2 lg:order-1">
          <div class="mb-12 lg:mb-0 flex items-center h-full mt-8 lg:mt-0">
            <p class="text-base leading-relaxed text-body-color dark:text-dark-6 text-justify whitespace-pre-line">
              {description}
            </p>
          </div>
        </div>

        <div class="w-full px-4 lg:w-3/5 xl:w-2/3 order-1 lg:order-2">
          <div class="flex flex-wrap justify-center items-center h-full">
            <div class="w-full relative">
              <CarouselSection 
                albumId={albumId}
                userId={userId}
                unlimitedHeight={unlimitedHeight}
                withBackground={false}
                height="400px"
                instanceId={instanceId}
              />
              <!-- Debug info -->
              <div class="hidden">
                Album ID: {albumId}
                User ID: {userId}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
