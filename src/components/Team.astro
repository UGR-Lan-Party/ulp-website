---
import { darkStyles } from "../utils/all"

const teams = [
  {name: "Antonio Miguel Mora", description: "Departamento de Teoría de la Señal, Telemática y Comunicaciones ", image: "/assets/team/team01.jpeg", linkedinLink: "https://www.linkedin.com/in/antoniomora",},
  {name: "Rafael Alejandro Rodríguez", description: "Departamento de Teoría de la Señal, Telemática y Comunicaciones ", image: "/assets/team/team02.jpeg", linkedinLink: "https://www.linkedin.com/in/rodgom",},
  {name: "Marcelino José Cabrera", description: "Departamento de Lenguajes y Sistemas Informáticos", image: "/assets/team/team03.jpeg", linkedinLink: "https://www.linkedin.com/in/marcelinocabrera",},
]
---

<!-- ====== Team Section Start -->
<section id="team" class={`bg-gray-1 dark:bg-dark-2 overflow-hidden pt-10 pb-12 lg:pt-[120px] lg:pb-[90px] ${darkStyles}`}>
  <div class="container">
    <div class="-mx-4 flex flex-wrap">
      <div class="w-full px-4">
        <div class="mx-auto mb-[60px] max-w-[485px] text-center">
          <span class="text-primary dark:text-gray-200 mb-2 block text-lg font-semibold">
            Equipo Técnico
          </span>
          <h2 class="mb-3 text-3xl leading-[1.2] font-bold text-dark dark:text-white sm:text-4xl md:text-[40px]">
            Más que Profesores
          </h2>
          <p class="text-body-color dark:text-dark-6 text-base">
            <slot name="texto"></slot>
            no solo se centran en las clases, también en pasarlo bien.
          </p>
        </div>
      </div>
    </div>

    <div class="-mx-4 flex flex-wrap justify-center">
      {
        teams.map(team => (
          <div class="w-full px-4 sm:w-1/2 lg:w-1/4 xl:w-1/4">
            <div class="wow fadeInUp group shadow-md mb-8 rounded-xl bg-white dark:bg-gray-200 px-5 pt-12 pb-10 hover:shadow-2xl dark:hover:shadow-[0px_10px_30px_rgba(255,255,255,0.4)] transition-shadow duration-300" data-wow-delay=".1s">
              <div class="relative z-10 mx-auto mb-5 w-[120px]">
                <img src={team.image} alt="team image" class=" w-[120px] rounded" />
                <span
                  class="bg-secondary absolute bottom-0 left-0 -z-10 h-10 w-10 rounded opacity-0 transition-all group-hover:opacity-100"></span>
              </div>
              <div class="text-center">
                <h4 class="mb-1 text-lg font-semibold text-dark dark:text-primary">
                  {team.name}
                </h4>
                <p class="text-body-color dark:text-tertiary mb-5 text-sm">
                  {team.description}
                </p>
                <div class="flex items-center gap-5 justify-center">
                  <a
                    href={team.linkedinLink}
                    class="hover:text-primary text-dark-6"
                  >

