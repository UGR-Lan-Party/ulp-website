---
// Colaborador.astro
const { nombre, descripciones, logo, logoColor, web, rrss } = Astro.props;
---

<div class="colaborador bg-tertiary dark:bg-gray-200">
    <img src={logo} alt={`Logotipo de ${nombre}`} class="logo dark:hidden" />
    <img src={logoColor} alt={`Logotipo de ${nombre}`} class="logo hidden dark:block" />
    <div class="contenido">
        <h3 class="nombre text-white dark:text-primary">{nombre}</h3>
        {descripciones && descripciones.map((descripcion: string, index: string) => (
            <p data-key={index} class="descripcion text-gray-200 dark:text-secondary">{descripcion}</p>
        ))}
        <a href={web} target="_blank" class="web-link bg-white text-primary hover:bg-primary hover:text-white dark:bg-primary dark:text-gray-200 dark:hover:bg-tertiary">Sitio Web</a>
        <div class="redes-sociales">
            {Object.entries(rrss).map(([red, enlace]) => (
                <a href={enlace as string} target="_blank" class="rrss-link dark:text-tertiary text-gray-300">{red}</a>
            ))}
        </div>
    </div>
</div>

<style>
:root {
    --color-fondo: #02475e;
    --color-texto: #ffffff;
    --color-acento: #00adb5;
    --fuente-principal: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    --tamano-texto: 16px;
    --espaciado: 20px;
}

.colaborador {
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--espaciado);
    padding-left: 10%;
    padding-right: 10%;
    transition: transform 0.3s ease;
    max-width: 100%;
    margin: 5%;

}

.logo {
    width: 200px;
    height: auto;
    margin-bottom: var(--espaciado);
}

.contenido {
    padding: 0 var(--espaciado);
}

.nombre {
    font-size: 1.25rem;
    font-weight: bold;
    margin-bottom: var(--espaciado);
    font-family: var(--fuente-principal);
}

.descripcion {
    font-size: var(--tamano-texto);
    margin-bottom: var(--espaciado);
    text-align: justify;
    font-family: var(--fuente-principal);
    padding: 0 var(--espaciado);
}

.web-link {
    display: inline-block;
    border-radius: 20px;
    padding: 10px 15px;
    margin: 5px;
    text-decoration: none;
    transition: background-color 0.3s ease;
}


.redes-sociales {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: var(--espaciado);
}

.rrss-link {
    /* Estilos para botones a redes sociales se mantienen */
    display: inline-block;
    border-radius: 20px;
    padding: 5px 15px;
    margin: 5px;
    text-decoration: none;
}


@media (max-width: 768px) {
    .colaborador {
        flex-direction: column;
    }

    .logo {
        width: 80px; /* Menor tamaño en dispositivos móviles */
    }

    .nombre {
        font-size: 1.1rem; /* Tamaño de texto ajustado para móviles */
    }

    .descripcion {
        font-size: var(--tamano-texto); /* Ajuste para mejor legibilidad en móviles */
    }
}
</style>
