---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/layout/Breadcrumb.astro';
import ContactButton from '../components/contactButton.astro';
import SponsorCard from '../components/SponsorCard.astro';
import { darkStyles } from '../utils/all';

import {
  sponsorsPlatinum,
  sponsorsGold,
  sponsorsSilver,
  sponsorsBronze,
  sponsorsRegular,
} from '../data/sponsors.ts';
---

<Layout title="Participan">
  <Breadcrumb>
    <Fragment slot="title">Participan</Fragment>
    <Fragment slot="texto">
      Conoce a las entidades que hacen posible este evento.
    </Fragment>
  </Breadcrumb>
  <div class={`w-full flex flex-col items-center justify-center ${darkStyles}`}>
    <section class="h-[200px] flex flex-col items-center justify-center gap-4">
      <h3 class="text-2xl font-semibold text-center dark:text-white">
        Â¿Quieres ser parte del proyecto?
      </h3>
      <ContactButton />
    </section>

    <main class="flex flex-col items-center justify-center mx-4 mb-16 gap-8">
      <div>
        <h3 class="text-4xl font-extrabold text-[#1771E6] text-center">
          Patrocinadores Platino
        </h3>
        <div
          class="w-full flex flex-col items-center justify-center md:flex-row md:flex-wrap"
        >
          {sponsorsPlatinum.map((sponsor) => <SponsorCard sponsor={sponsor} />)}
        </div>
      </div>
      <div>
        <h3 class="text-4xl font-extrabold text-[#FFC002] text-center">
          Patrocinadores Oro
        </h3>
        <div
          class="w-full flex flex-col items-center justify-center md:flex-row md:flex-wrap"
        >
          {sponsorsGold.map((sponsor) => <SponsorCard sponsor={sponsor} />)}
        </div>
      </div>
      <div>
        <h3 class="text-4xl font-extrabold text-[#9a9ba0] text-center">
          Patrocinadores Plata
        </h3>
        <div
          class="w-full flex flex-col items-center justify-center md:flex-row md:flex-wrap"
        >
          {sponsorsSilver.map((sponsor) => <SponsorCard sponsor={sponsor} />)}
        </div>
      </div>
      <div>
        <h3 class="text-4xl font-extrabold text-[#BB5522] text-center">
          Patrocinadores Bronce
        </h3>
        <div
          class="w-full flex flex-col items-center justify-center md:flex-row md:flex-wrap"
        >
          {sponsorsBronze.map((sponsor) => <SponsorCard sponsor={sponsor} />)}
        </div>
      </div>
      <div>
        <h3
          class="text-4xl font-extrabold text-[#414247] dark:text-[#CACACA] text-center"
        >
          Patrocinadores y Colaboradores
        </h3>
        <div
          class="w-full flex flex-col items-center justify-center md:flex-row md:flex-wrap"
        >
          {sponsorsRegular.map((sponsor) => <SponsorCard sponsor={sponsor} />)}
        </div>
      </div>
    </main>
  </div>
</Layout>

